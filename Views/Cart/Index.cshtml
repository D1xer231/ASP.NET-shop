@model List<Item>
@{
    ViewData["Title"] = "Корзина";
    ViewData["H1"] = "Корзина";
}

@if (ViewBag.NoItems != null) {
    <p>@ViewBag.NoItems</p>
}

@foreach (Item el in Model)
{
    <div class="order-item">
        <h1>@el.name</h1>
        <p>Цена: @el.price.ToString("c")</p>
    </div>
}

@if(ViewBag.Summary != null) {
    <div class="summary">
        <p>Общая сумма: @ViewBag.Summary.ToString("c")</p>
        <a href="/cart/order">Оплатить</a>
    </div>
}